<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:padding="10dp"
    tools:context=".MockTestReview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:orientation="vertical"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="sans-serif"
                    android:text="EAMCET"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <!--<Spinner-->
                <!--android:id="@+id/spinner"-->
                <!--style="@style/test_spinner"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="25dp"-->
                <!--android:layout_gravity="top"-->
                <!--android:spinnerMode="dialog"-->
                <!--android:visibility="visible" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Questions Review"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="normal" />

            </LinearLayout>



            <ImageView
                android:id="@+id/img_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/ic_listicon" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="2dp">

            <ImageView
                android:id="@+id/iv_back"
                android:padding="10dp"
                android:layout_width="30dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:text="Review Test"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_que_no_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_question_number"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_subName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Maths"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:text="02:10:34"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lvoptions"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:background="@drawable/customeboader"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ededed"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_queno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Question 1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="normal"
                    tools:text="Not Available" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <WebView
                    android:id="@+id/wv_que"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:elevation="4dp" />

                <ScrollView
                    android:id="@+id/ll_mfq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:scrollbars="none"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="6dp"
                            android:text="Match the following"
                            android:textColor="#de000000"
                            android:textSize="14dp"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center_horizontal"
                                android:text="Column A"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center_horizontal"
                                android:text="Column B"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_que"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />

                    </LinearLayout>

                </ScrollView>
            </LinearLayout>


        </LinearLayout>


        <!--</android.support.v7.widget.CardView>-->

        <TextView
            android:id="@+id/tv_queresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Unanswered"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_mcqOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_a"
                android:layout_width="70dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/practice_btn_optsel"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="A"
                android:textColor="#9b9b9b"
                android:layout_height="55dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_b"
                android:layout_width="70dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/practice_btn_optsel"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="B"
                android:textColor="#9b9b9b"
                android:layout_height="55dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_c"
                android:layout_width="70dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/practice_btn_optsel"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="C"
                android:textColor="#9b9b9b"
                android:layout_height="55dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_d"
                android:layout_width="70dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/practice_btn_optsel"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="D"
                android:textColor="#9b9b9b"
                android:layout_height="55dp"
                android:textSize="20dp" />

        </LinearLayout>

        <!--TRUE or False-->
        <LinearLayout
            android:id="@+id/ll_tf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_true"
                android:layout_width="42dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_cust_test_opt_unselected"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="True"
                android:textColor="#9b9b9b"
                android:layout_height="55dp"
                android:textSize="20dp" />


            <Button
                android:id="@+id/btn_false"
                android:layout_width="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_cust_test_opt_unselected"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="False"
                android:textColor="#9b9b9b"
                android:layout_height="55dp"
                android:textSize="20dp" />

        </LinearLayout>

        <!--MFQ -->

        <LinearLayout
            android:id="@+id/ll_mfqOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_mfqResponce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Responce" />

                <TextView
                    android:textSize="18sp"
                    android:id="@+id/tv_mfqResponce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="UnAnswered"
                    android:textColor="#000000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correct Ans" />

                <TextView
                    android:textSize="18sp"
                    android:id="@+id/tv_mfqResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Your Responce"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <ImageView
                android:id="@+id/img_prev"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_grad_next_button"
                android:padding="16dp"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/tv_explain"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:fontFamily="@font/lato"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_grad_next_button"
                android:text="View Explanation"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/img_next"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:padding="16dp"
                android:background="@drawable/bg_grad_next_button"
                android:src="@drawable/ic_next_arrow" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hidden_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#d8000000"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cross_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Close"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="normal" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/bg_segment"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_seg1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="Maths"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tv_seg2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Physics"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tv_seg3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Chemistry"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_quelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quelist"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/customeboader"
                android:scrollbars="none" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/explanation_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#d8000000"
        android:gravity="end"
        android:padding="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_expclose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_cross_white" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <WebView
                        android:id="@+id/wv_quereview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </WebView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Correct Answer"
                        android:textColor="#066e8f"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <WebView
                        android:id="@+id/wv_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="50dp">

                    </WebView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Explanation"
                        android:textColor="#066e8f"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <WebView
                        android:id="@+id/wv_explanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </WebView>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>