<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_circular_title"
                android:paddingTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#494949"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:text="Circular Title"/>
            <TextView
                android:id="@+id/tv_circular_time"
                android:gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textColor="#494949"
                android:alpha="0.5"
                android:fontFamily="@font/lato"
                android:text="11-09-2020 | 6pm"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tv_circular_desc"
                android:gravity="top"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textColor="#494949"
                android:alpha="0.5"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineHeight="14dp"
                android:fontFamily="@font/lato"
                android:text="Schedule is attached ,Please View it for full details."/>
            <ImageView
                android:id="@+id/iv_attach"
                android:layout_marginLeft="80dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_big_attachments"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>