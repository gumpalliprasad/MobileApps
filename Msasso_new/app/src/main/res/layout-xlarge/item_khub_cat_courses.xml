<androidx.cardview.widget.CardView android:id="@+id/container"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_course_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/improve_verbal"/>

            <com.google.android.material.progressindicator.ProgressIndicator
                style="@style/Widget.MaterialComponents.ProgressIndicator.Linear.Determinate"
                app:indicatorSize="5dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:indicatorColor="#25c03e"
                android:visibility="gone"
                app:trackColor="#919191"
                android:progress="30"
                app:indicatorCornerRadius="5dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:textStyle="bold"
                android:fontFamily="@font/lato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Logical Reasoning" />



            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/lato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#32ad9a"
                    android:text="Continue: " />

                <TextView
                    android:fontFamily="@font/lato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold|italic"
                    android:textColor="#32ad9a"
                    android:text="Spelling"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#40000000"
                    android:text="MSA - Original" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:visibility="gone"
                    android:isIndicator="true"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_views_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1m Views"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_gravity="center"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_enroll_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:visibility="visible"
            android:paddingTop="15dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:background="@drawable/bg_black_10"
            android:textColor="@color/white"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:text="Click to Enroll"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>


