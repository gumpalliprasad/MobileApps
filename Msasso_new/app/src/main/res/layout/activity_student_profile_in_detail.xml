                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif"
                        android:text="+91 "
                        android:textColor="#222222"
                        android:textSize="16sp"
                        android:textStyle="normal" />

