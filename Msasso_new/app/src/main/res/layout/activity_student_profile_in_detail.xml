                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:text="1102, Block A, Fresh Apartments, XYZ Colony, Hyderabad - 80"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="20dp"
                    android:background="#cfcfcf" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_lookinto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="gone">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corners_white14sh"
                    android:drawableLeft="@drawable/ic_homework"
                    android:drawablePadding="4dp"
                    android:elevation="5dp"
                    android:gravity="center|center_vertical"
                    android:paddingLeft="60dp"
                    android:paddingTop="13dp"
                    android:paddingRight="60dp"
                    android:paddingBottom="13dp"
                    android:textSize="14sp"
                    android:id="@+id/btn_reset_pass_stud"
                    android:text="Reset Password"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="LOOK INTO"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_performance"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners_white14sh"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="25dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_menu_report" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Performance and Analysis"
                        android:textColor="#000000"
