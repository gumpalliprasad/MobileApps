<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_name_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/circle_color"
        android:gravity="center"
        android:text="A"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:src="@drawable/user_default"
        android:visibility="gone"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rollNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dp"
            android:fontFamily="sans-serif"
            android:text="112126"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="Jeff Dixon"
            android:textColor="#80000000"
            android:textSize="11dp"
            android:textStyle="normal" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_att_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_6"
        android:text="Present"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/lato"
        android:textSize="14sp"
        android:drawablePadding="4dp"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/bg_spinner_drop_arrow"/>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:visibility="gone"
        app:cardCornerRadius="6dp">

        <Spinner
            style="@style/mySpinner"
            android:id="@+id/sp_att_status"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/option"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_radio" />

</LinearLayout>