<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_online"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_secName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lato"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Section Details"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_secDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lato"
                android:text="Section Details"
                android:layout_marginTop="4dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_secured_marks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lato"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:visibility="gone"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ans_any"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lato"
                android:text="Answer Any : 10/10"
                android:gravity="center"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_sec_marks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lato"
                android:text="Total Marks : 40 "
                android:layout_marginTop="4dp"
                android:layout_gravity="center" />


        </LinearLayout>





    </LinearLayout>

    <TextView
        android:id="@+id/tv_no_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Questions available for this Section"
        android:background="@drawable/bg_border_6"
        android:backgroundTint="#22575757"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/lato"
        android:padding="12dp"
        android:layout_margin="4dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_objective"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Objective Test"
        android:background="@drawable/bg_border_6"
        android:backgroundTint="#22575757"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/lato"
        android:padding="12dp"
        android:layout_margin="4dp"
        android:layout_gravity="center"
        android:visibility="gone"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sec_det"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>