<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_margin="16dp"
        android:animateLayoutChanges="true"
        android:id="@+id/ll_toolbar"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_back"
            android:src="@drawable/ic_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignments"
            android:textColor="#000000"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_hw_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assignments"
                android:textSize="18sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="700"
                android:textColor="#64494949"/>
            <TextView
                android:id="@+id/tv_hw_title"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number System"
                android:textSize="18sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="700"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_border_6"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Day"
                android:textSize="12sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="700"
                android:textColor="#64494949"/>
            <TextView
                android:id="@+id/tv_hw_last_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13-08-20"
                android:textSize="15sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="700"
                android:textColor="#000000"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_border_6">
        <Spinner
            style="@style/mySpinner"
            android:id="@+id/sp_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_submissions"/>


</LinearLayout>