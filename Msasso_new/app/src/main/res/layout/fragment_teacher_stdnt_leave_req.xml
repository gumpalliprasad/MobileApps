<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".Fragments.TeacherStdntLeaveReqFrag">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_date_time"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_gravity="center"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar_month_year"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/lato"
                android:text="September 2020"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_tab_back_ground">
        <TextView
            android:id="@+id/tv_pending"
            android:background="@drawable/bg_grad_tab_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pending"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:padding="12dp"/>
        <TextView
            android:id="@+id/tv_approved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Approved"
            android:textAllCaps="true"
            android:textColor="#494949"
            android:alpha="0.75"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/tv_rejected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rejected"
            android:textAllCaps="true"
            android:textColor="#494949"
            android:alpha="0.75"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:padding="12dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_no_requests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Pending Request for this Section"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_leave_req"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>