<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QBox.QboxQuestionDetails">


    <LinearLayout
        android:animateLayoutChanges="true"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/lato"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_student_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:civ_border_color="#cfcfcf"
                    app:civ_border_width="1dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user_default"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_student_name"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kirankumar. G"
                        android:textSize="16sp"
                        android:fontFamily="@font/lato"
                        android:textFontWeight="700"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/tv_rollnum"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="126521"
                        android:textSize="18sp"
                        android:fontFamily="@font/lato"
                        android:textFontWeight="700"
                        android:textColor="#3d3d3d"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_que_date"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="19-08-2020"
                        android:gravity="end"
                        android:textSize="14sp"
                        android:fontFamily="@font/lato"
                        android:textFontWeight="400"
                        android:textColor="#80000000"/>
                    <TextView
                        android:id="@+id/tv_que_time"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10 min ago"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:fontFamily="@font/lato"
                        android:textFontWeight="400"
                        android:textColor="#80000000"/>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="18sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:textColor="#1d679e"
                android:text="What were the circumstances of Sir Charles Baskerville's death in The Hound of the Baskervilles?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_subjectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/lato"
                    android:text="Maths"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>


                <TextView
                    android:id="@+id/tv_attachments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:textFontWeight="400"
                    android:text="View Attachments"
                    android:drawableLeft="@drawable/ic_qbox_attachement"
                    android:drawableTint="#1d679e"
                    android:fontFamily="@font/lato"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#80000000"
                    android:gravity="center"
                    android:padding="8dp"
                    android:drawablePadding="10dp"
                    android:textFontWeight="700"
                    android:text="12 Likes"
                    android:drawableLeft="@drawable/ic_heart_filled"
                    android:fontFamily="@font/lato"
                    />



                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:src="@drawable/ic_share"
                    android:layout_marginStart="12dp"
                    android:padding="8dp"
                    android:visibility="gone"
                    app:tint="#1d679e"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>


                <TextView
                    android:id="@+id/tv_replies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="8dp"
                    android:drawablePadding="10dp"
                    android:textFontWeight="700"
                    android:text="12 replies"
                    android:drawableLeft="@drawable/ic_reply"
                    android:drawableTint="#1d679e"
                    android:fontFamily="@font/lato"
                    />




            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_que_replies"
                android:layout_width="match_parent"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                tools:listitem="@layout/item_qbox_que_reply"/>

            <TextView
                android:id="@+id/tv_noreplies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No Replies for this Question"
                android:fontFamily="@font/lato"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pending"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:padding="14dp"
            android:visibility="gone"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Reject"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/lato"
                android:textFontWeight="600"
                android:background="@drawable/bg_qbox_ff2d2d_border"
                android:layout_marginEnd="8dp"
                android:textColor="#A20C0C"/>

            <TextView
                android:id="@+id/tv_approve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:text="Approve"
                android:textFontWeight="600"
                android:fontFamily="@font/lato"
                android:background="@drawable/bg_qbox_ff2d2d_round"/>
        </LinearLayout>


    </RelativeLayout>






</LinearLayout>