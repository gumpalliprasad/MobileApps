<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="16dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cross_white"
                android:tint="@color/black"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HomeWork"
                android:textColor="#000000"
                android:fontFamily="@font/lato"
                android:textFontWeight="700"
                android:textSize="18sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="16sp"
                android:fontFamily="@font/lato"
                android:textColor="#64000000"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Type"
                android:layout_weight="0.3"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_border_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7">
                <Spinner
                    style="@style/mySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_type"/>
            </LinearLayout>



        </LinearLayout>


        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title*"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/lato"
            android:textFontWeight="600"/>

        <EditText
            android:id="@+id/et_title"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/lato"
            android:textFontWeight="400"
            android:lineHeight="16dp"
            android:hint="Enter title"
            android:textColorHint="#32000000"
            android:paddingBottom="8dp"
            android:textColor="#96000000"/>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description*"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/lato"
            android:textFontWeight="600"/>

        <EditText
            android:id="@+id/et_desc"
            android:background="@null"
            android:hint="Enter the description"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|left"
            android:maxLines="10"
            android:layout_height="140dp"
            android:textSize="14sp"
            android:fontFamily="@font/lato"
            android:textFontWeight="400"
            android:lineHeight="16dp"
            android:textColor="#96000000"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            />

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Day of Submission*"
            android:textSize="14sp"
            android:textColor="#64000000"
            android:fontFamily="@font/lato"
            android:textFontWeight="400"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_date_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="12/10/2020"
                android:paddingBottom="10dp"
                android:editable="false"
                android:paddingLeft="5dp"
                android:paddingRight="55dp"
                android:fontFamily="@font/lato"
                android:textFontWeight="600"/>
            <CheckBox
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Deadline"
                android:textColor="#96000000"
                android:textFontWeight="400"
                android:fontFamily="@font/lato"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Homework Date*"
            android:textSize="14sp"
            android:textColor="#64000000"
            android:fontFamily="@font/lato"
            android:textFontWeight="400"/>

        <EditText
            android:id="@+id/et_hw_date_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="12/10/2020"
            android:paddingBottom="10dp"
            android:editable="false"
            android:paddingLeft="5dp"
            android:paddingRight="55dp"
            android:fontFamily="@font/lato"
            android:textFontWeight="600"/>


        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Attachments (Optional)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#64000000"
            android:fontFamily="@font/lato"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload PDF, DOC, JPG, PNG files"
            android:textSize="12sp"
            android:textFontWeight="400"
            android:textColor="#64000000"
            android:fontFamily="@font/lato"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_files"/>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/ll_previous_submissions">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Previous Attachments"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#64000000"
                android:fontFamily="@font/lato"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_prev_files"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_grad_tab_select"
            android:text="NEXT"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:textColor="#ffffff"/>



    </LinearLayout>

</ScrollView>