                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="12dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_arena_text_t" />

                                        <EditText
                                            android:id="@+id/et_option_text_a"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_marginLeft="10dp"
                                            android:background="@null"
                                            android:fontFamily="@font/lato"
                                            android:hint="Add Text Here"
                                            android:textSize="14sp" />
                                    </LinearLayout>
                                </LinearLayout>

                            </FrameLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:id="@+id/cv_b"
                            app:cardCornerRadius="5dp">


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_margin="8dp"
                                    app:cardCornerRadius="10dp">

                                    <TextView
                                        android:id="@+id/tv_option_b"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/lato"
                                        android:gravity="center"
                                        android:text="B"
                                        android:textColor="#000000"
                                        android:textFontWeight="600"
                                        android:textSize="13sp" />
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <FrameLayout
                                        android:id="@+id/fl_b"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/cv_remove_b_image"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="right"
                                            android:layout_margin="8dp"
                                            app:cardCornerRadius="15dp">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:padding="5dp"
                                                android:src="@drawable/ic_cross_white"
                                                app:tint="@color/black" />

                                        </androidx.cardview.widget.CardView>

                                        <ImageView
                                            android:id="@+id/iv_selected_image_b"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="start"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_gallery_dummy"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/tv_select_image_b"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginTop="50dp"
                                            android:drawableTop="@drawable/ic_arena_add_image"
                                            android:fontFamily="@font/lato"
                                            android:src="@drawable/ic_menu_gallery"
                                            android:text="Tap To Add Image"
                                            android:textSize="12sp" />


                                    </FrameLayout>

                                    <LinearLayout
                                        android:id="@+id/tl_b"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="12dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_arena_text_t" />

                                        <EditText
                                            android:id="@+id/et_option_text_b"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_marginLeft="10dp"
                                            android:background="@null"
                                            android:fontFamily="@font/lato"
                                            android:hint="Add Text Here"
                                            android:textSize="14sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </FrameLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_bottom_op"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:id="@+id/cv_c"
                            app:cardCornerRadius="5dp">


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_margin="8dp"
                                    app:cardCornerRadius="10dp">

                                    <TextView
                                        android:id="@+id/tv_option_c"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/lato"
                                        android:gravity="center"
                                        android:text="C"
                                        android:textColor="#000000"
                                        android:textFontWeight="600"
                                        android:textSize="13sp" />
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <FrameLayout
                                        android:id="@+id/fl_c"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/cv_remove_c_image"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="right"
                                            android:layout_margin="8dp"
                                            app:cardCornerRadius="15dp">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:padding="5dp"
                                                android:src="@drawable/ic_cross_white"
                                                app:tint="@color/black" />

                                        </androidx.cardview.widget.CardView>

                                        <ImageView
                                            android:id="@+id/iv_selected_image_c"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="start"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_gallery_dummy"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/tv_select_image_c"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginTop="50dp"
                                            android:drawableTop="@drawable/ic_arena_add_image"
                                            android:fontFamily="@font/lato"
                                            android:src="@drawable/ic_menu_gallery"
                                            android:text="Tap To Add Image"
                                            android:textSize="12sp" />


                                    </FrameLayout>

                                    <LinearLayout
                                        android:id="@+id/tl_c"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="12dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_arena_text_t" />

                                        <EditText
                                            android:id="@+id/et_option_text_c"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_marginLeft="10dp"
                                            android:background="@null"
                                            android:fontFamily="@font/lato"
                                            android:hint="Add Text Here"
                                            android:textSize="14sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </FrameLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="0dp"
                            android:id="@+id/cv_d"
                            android:layout_height="180dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="5dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_margin="8dp"
                                    app:cardCornerRadius="10dp">

                                    <TextView
                                        android:id="@+id/tv_option_d"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/lato"
                                        android:gravity="center"
                                        android:text="D"
                                        android:textColor="#000000"
                                        android:textFontWeight="600"
                                        android:textSize="13sp" />
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <FrameLayout
                                        android:id="@+id/fl_d"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/cv_remove_d_image"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="right"
                                            android:layout_margin="8dp"
                                            app:cardCornerRadius="15dp">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:padding="5dp"
                                                android:src="@drawable/ic_cross_white"
                                                app:tint="@color/black" />

                                        </androidx.cardview.widget.CardView>

                                        <ImageView
                                            android:id="@+id/iv_selected_image_d"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="start"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_gallery_dummy"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/tv_select_image_d"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginTop="50dp"
                                            android:drawableTop="@drawable/ic_arena_add_image"
                                            android:fontFamily="@font/lato"
                                            android:src="@drawable/ic_menu_gallery"
                                            android:text="Tap To Add Image"
                                            android:textSize="12sp" />

                                    </FrameLayout>

                                    <LinearLayout
                                        android:id="@+id/tl_d"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="12dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_arena_text_t" />

                                        <EditText
                                            android:id="@+id/et_option_text_d"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_marginLeft="10dp"
