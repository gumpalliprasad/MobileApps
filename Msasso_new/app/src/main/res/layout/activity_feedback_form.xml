<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_theme_round"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_white_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Student Survey Form"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/lato"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layoutAnimation="@anim/layout_animation_left_in"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/rv_feed_back"/>




    <it.gilvegliach.android.transparenttexttextview.TransparentTextTextView
        android:background="@drawable/bg_10_faded_dp"
        android:layout_margin="16dp"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Next"
        android:id="@+id/btn_next"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:animateLayoutChanges="true"
        android:fontFamily="@font/lato"/>

</LinearLayout>