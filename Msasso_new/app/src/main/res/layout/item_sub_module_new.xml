<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/ic_sub_with_sub"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_module_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:text="Spelling"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#ffffff"
        android:textFontWeight="700"
        android:textSize="16sp" />

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:id="@+id/iv_cos_complete"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_khub_co_com"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="0%"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <com.google.android.material.progressindicator.ProgressIndicator
            android:id="@+id/progressind"
            style="@style/Widget.MaterialComponents.ProgressIndicator.Linear.Determinate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:progress="20"
            app:indicatorColor="#ffffff"
            app:indicatorCornerRadius="5dp"
            app:indicatorSize="5dp" />

    </LinearLayout>

</LinearLayout>

