<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_back"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Attendance"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/lato"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/bg_border_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance"
                    android:fontFamily="@font/lato"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:textColor="#64494949"/>
                <TextView
                    android:id="@+id/tv_total_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:fontFamily="@font/lato"
                    android:textSize="18sp"
                    android:textFontWeight="700"
                    android:textColor="#000000"/>
            </LinearLayout>

            <View
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/tv_leave_req"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Leave Request"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/lato"
                android:background="@drawable/bg_grad_tab_select"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bg_border_6"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taken/Total"
                    android:fontFamily="@font/lato"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:textColor="#64494949"/>
                <TextView
                    android:id="@+id/tv_total_taken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/0"
                    android:fontFamily="@font/lato"
                    android:textSize="18sp"
                    android:textFontWeight="700"
                    android:textColor="#000000"/>

            </LinearLayout>

            <View
                android:layout_marginRight="15dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#16000000"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present"
                    android:fontFamily="@font/lato"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:textColor="#64494949"/>
                <TextView
                    android:id="@+id/tv_total_present"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/lato"
                    android:textSize="18sp"
                    android:textFontWeight="700"
                    android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absent"
                    android:fontFamily="@font/lato"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:textColor="#64494949"/>
                <TextView
                    android:id="@+id/tv_total_absent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/lato"
                    android:textSize="18sp"
                    android:textFontWeight="700"
                    android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Late"
                    android:fontFamily="@font/lato"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:textColor="#64494949"/>
                <TextView
                    android:id="@+id/tv_total_late"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/lato"
                    android:textSize="18sp"
                    android:textFontWeight="700"
                    android:textColor="#000000"/>

            </LinearLayout>



        </LinearLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/idPieChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:padding="1dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#23A37C"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Present Days"
                    android:fontFamily="@font/lato"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#F9A71B"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Late"
                    android:fontFamily="@font/lato"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#B10C20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Absent"
                    android:fontFamily="@font/lato"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/bg_border_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month"
                android:textSize="12sp"
                android:textColor="#64494949"
                android:fontFamily="@font/lato"/>
            <TextView
                android:id="@+id/tv_date"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug 2020"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/lato"/>
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/bg_border_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Working Days"
                    android:fontFamily="@font/lato"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:textColor="#64494949"/>
                <TextView
                    android:id="@+id/tv_working"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/0"
                    android:fontFamily="@font/lato"
                    android:textSize="18sp"
                    android:textFontWeight="700"
                    android:textColor="#000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_border_6"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absent"
                    android:fontFamily="@font/lato"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:textColor="#64494949"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tv_absent"
                    android:fontFamily="@font/lato"
                    android:textSize="18sp"
                    android:textFontWeight="700"
                    android:textColor="#000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_border_6"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Holidays"
                    android:fontFamily="@font/lato"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:textColor="#64494949"/>
                <TextView
                    android:id="@+id/tv_holidays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/lato"
                    android:textSize="18sp"
                    android:textFontWeight="700"
                    android:textColor="#000000"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</ScrollView>