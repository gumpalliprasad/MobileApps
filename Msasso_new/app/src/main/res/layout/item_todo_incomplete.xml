<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="@drawable/bg_border_10"
    android:padding="15dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/vw_complete"
        android:background="@drawable/bg_to_do_circle"
        android:layout_width="26dp"
        android:layout_height="26dp"/>

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_todotitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mathematics Live Class"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#494949"
            android:fontFamily="@font/lato"
            android:lines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_tododesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete chapter 7"
            android:textSize="12sp"
            android:textColor="#494949"
            android:fontFamily="@font/lato"
            android:lines="1"
            android:ellipsize="end"/>

    </LinearLayout>

</LinearLayout>