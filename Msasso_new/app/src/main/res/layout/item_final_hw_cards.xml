<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_main_bg"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_grad_hw_missed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7">

                <TextView
                    android:id="@+id/tv_hw_name"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number System"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato"/>
                <TextView
                    android:id="@+id/tv_sub_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"
                    android:textColor="#ffffff"
                    android:alpha="0.75"
                    android:textFontWeight="700"
                    android:textSize="12sp"
                    android:fontFamily="@font/lato"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_submission"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submitted Date"
                    android:textColor="#ffffff"
                    android:alpha="0.75"
                    android:textFontWeight="700"
                    android:textSize="12sp"
                    android:fontFamily="@font/lato"/>
                <TextView
                    android:id="@+id/tv_submitted_date"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11-08-2020"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Date"
                    android:textColor="#ffffff"
                    android:alpha="0.75"
                    android:textFontWeight="700"
                    android:textSize="12sp"
                    android:fontFamily="@font/lato"/>
                <TextView
                    android:id="@+id/tv_submit_by"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13-08-2020"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_teacher_review"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:background="@drawable/bg_hw_section_status"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_status_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="#ffffff"
                    android:alpha="0.75"
                    android:textFontWeight="700"
                    android:textSize="12sp"
                    android:fontFamily="@font/lato"/>
                <TextView
                    android:id="@+id/tv_status"
                    android:lines="1"
                    android:textAllCaps="true"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REASSIGNED"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>