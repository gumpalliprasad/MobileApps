<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="#530955"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:fontFamily="@font/lato"
            android:textFontWeight="700"/>

        <TextView
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have completed all the flash cards!"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:fontFamily="@font/lato"/>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_no_q"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Questions - 15"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="700"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
            <TextView
                android:id="@+id/tv_correct"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You Got It - 10"
                android:textAllCaps="false"
                android:textColor="#12A555"
                android:textSize="20sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="500"/>
            <TextView
                android:id="@+id/tv_wrong"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Study Again - 5"
                android:textAllCaps="false"
                android:textColor="#EB3D06"
                android:textSize="20sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="500"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp">
                <Button
                    android:id="@+id/btn_try_again"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_2e2e8b"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Try Again"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato"
                    android:textFontWeight="700"/>
                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg_green"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Finish"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato"
                    android:textFontWeight="700"/>
            </LinearLayout>






        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>