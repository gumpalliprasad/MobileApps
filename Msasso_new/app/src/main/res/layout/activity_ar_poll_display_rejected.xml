<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Create Poll"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textFontWeight="700"
                    android:text="Teacher Comment"
                    android:fontFamily="@font/lato"
                    />

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ex esse deserunt non elit irure elit. Esse laborum minim ex elit est proident cupidatat culpa proident cillum consectetur eu deserunt sint."
                    android:textSize="15sp"
                    android:lineHeight="24sp"
                    android:textColor="#000000"
                    android:alpha="0.75"
                    android:textFontWeight="400"
                    android:fontFamily="@font/lato"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/ll_poll_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_border_6">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_remove_q_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/ic_cross_white"
                        app:tint="@color/black" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/ll_add_q_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_show_add_q_image_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_arena_add_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/lato"
                            android:text="Tap to add Image"
                            android:textColor="#64000000"
                            android:textFontWeight="400"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_q_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                </LinearLayout>


            </FrameLayout>

            <EditText
                android:id="@+id/et_mcq_ques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_border_6"
                android:fontFamily="@font/lato"
                android:hint="Enter poll question"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingTop="16dp"
                android:paddingRight="8dp"
                android:paddingBottom="16dp"
                android:textColor="#000000"
                android:elevation="20dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_text"
                android:drawableTint="@color/black"
                android:textColorHint="#64000000"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato"
                    android:textFontWeight="700"
                    android:text="Number of Options: "/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_border_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:padding="8dp"
                        android:layout_gravity="center"
                        android:id="@+id/tv_remove_op"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato"
                        android:textFontWeight="700"
                        android:text=" - "/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#16000000"/>

                    <TextView
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_gravity="center"
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato"
                        android:textFontWeight="700"
                        android:text="0"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#16000000"/>

                    <TextView
                        android:padding="8dp"
                        android:layout_gravity="center"
                        android:id="@+id/tv_add_op"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/lato"
                        android:textFontWeight="700"
                        android:textColor="@color/black"
                        android:text="+"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_quiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:id="@+id/cv_a"
                        app:cardCornerRadius="5dp">


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="8dp"
                                app:cardCornerRadius="10dp">

                                <TextView
                                    android:id="@+id/tv_option_a"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/lato"
                                    android:gravity="center"
                                    android:text="A"
                                    android:textColor="#000000"
                                    android:textFontWeight="600"
                                    android:textSize="13sp" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_a"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cv_remove_a_image"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="right"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="15dp">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:padding="5dp"
                                            android:src="@drawable/ic_cross_white"
                                            app:tint="@color/black" />

                                    </androidx.cardview.widget.CardView>

                                    <ImageView
                                        android:id="@+id/iv_selected_image_a"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="start"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic_gallery_dummy"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/tv_select_image_a"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="50dp"
                                        android:drawableTop="@drawable/ic_arena_add_image"
                                        android:fontFamily="@font/lato"
                                        android:src="@drawable/ic_menu_gallery"
                                        android:text="Tap To Add Image"
                                        android:textSize="12sp" />

                                </FrameLayout>

                                <LinearLayout
                                    android:id="@+id/tl_a"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="12dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_arena_text_t" />

                                    <EditText
                                        android:id="@+id/et_option_text_a"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginLeft="10dp"
                                        android:background="@null"
                                        android:fontFamily="@font/lato"
                                        android:hint="Add Text Here"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </FrameLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:id="@+id/cv_b"
                        app:cardCornerRadius="5dp">


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="8dp"
                                app:cardCornerRadius="10dp">

                                <TextView
                                    android:id="@+id/tv_option_b"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/lato"
                                    android:gravity="center"
                                    android:text="B"
                                    android:textColor="#000000"
                                    android:textFontWeight="600"
                                    android:textSize="13sp" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_b"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cv_remove_b_image"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="right"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="15dp">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:padding="5dp"
                                            android:src="@drawable/ic_cross_white"
                                            app:tint="@color/black" />

                                    </androidx.cardview.widget.CardView>

                                    <ImageView
                                        android:id="@+id/iv_selected_image_b"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="start"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic_gallery_dummy"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/tv_select_image_b"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="50dp"
                                        android:drawableTop="@drawable/ic_arena_add_image"
                                        android:fontFamily="@font/lato"
                                        android:src="@drawable/ic_menu_gallery"
                                        android:text="Tap To Add Image"
                                        android:textSize="12sp" />


                                </FrameLayout>

                                <LinearLayout
                                    android:id="@+id/tl_b"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="12dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_arena_text_t" />

                                    <EditText
                                        android:id="@+id/et_option_text_b"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginLeft="10dp"
                                        android:background="@null"
                                        android:fontFamily="@font/lato"
                                        android:hint="Add Text Here"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bottom_op"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:id="@+id/cv_c"
                        app:cardCornerRadius="5dp">


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="8dp"
                                app:cardCornerRadius="10dp">

                                <TextView
                                    android:id="@+id/tv_option_c"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/lato"
                                    android:gravity="center"
                                    android:text="C"
                                    android:textColor="#000000"
                                    android:textFontWeight="600"
                                    android:textSize="13sp" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_c"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cv_remove_c_image"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="right"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="15dp">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:padding="5dp"
                                            android:src="@drawable/ic_cross_white"
                                            app:tint="@color/black" />

                                    </androidx.cardview.widget.CardView>

                                    <ImageView
                                        android:id="@+id/iv_selected_image_c"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="start"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic_gallery_dummy"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/tv_select_image_c"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="50dp"
                                        android:drawableTop="@drawable/ic_arena_add_image"
                                        android:fontFamily="@font/lato"
                                        android:src="@drawable/ic_menu_gallery"
                                        android:text="Tap To Add Image"
                                        android:textSize="12sp" />


                                </FrameLayout>

                                <LinearLayout
                                    android:id="@+id/tl_c"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="12dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_arena_text_t" />

                                    <EditText
                                        android:id="@+id/et_option_text_c"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginLeft="10dp"
                                        android:background="@null"
                                        android:fontFamily="@font/lato"
                                        android:hint="Add Text Here"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:id="@+id/cv_d"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="8dp"
                                app:cardCornerRadius="10dp">

                                <TextView
                                    android:id="@+id/tv_option_d"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/lato"
                                    android:gravity="center"
                                    android:text="D"
                                    android:textColor="#000000"
                                    android:textFontWeight="600"
                                    android:textSize="13sp" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/fl_d"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cv_remove_d_image"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="right"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="15dp">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:padding="5dp"
                                            android:src="@drawable/ic_cross_white"
                                            app:tint="@color/black" />

                                    </androidx.cardview.widget.CardView>

                                    <ImageView
                                        android:id="@+id/iv_selected_image_d"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="start"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic_gallery_dummy"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/tv_select_image_d"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="50dp"
                                        android:drawableTop="@drawable/ic_arena_add_image"
                                        android:fontFamily="@font/lato"
                                        android:src="@drawable/ic_menu_gallery"
                                        android:text="Tap To Add Image"
                                        android:textSize="12sp" />

                                </FrameLayout>

                                <LinearLayout
                                    android:id="@+id/tl_d"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="12dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_arena_text_t" />

                                    <EditText
                                        android:id="@+id/et_option_text_d"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginLeft="10dp"
                                        android:background="@null"
                                        android:fontFamily="@font/lato"
                                        android:hint="Add Text Here"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>




            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_2e2e8b"
            android:paddingStart="40dp"
            android:paddingTop="16dp"
            android:paddingEnd="40dp"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Update"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>