<androidx.cardview.widget.CardView android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"

    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout android:background="#FF9966"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/lato"
            android:textColor="#990D22"
            android:gravity="center"
            android:text="Science"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="21sp"
            android:fontFamily="@font/lato"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Chapter Name"/>
        <TextView
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="14sp"
            android:fontFamily="@font/lato"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:text="Sint nostrud do ipsum dolor proident esse aliquip cillum dolor adipisicing excepteur. Sint nostrud do ipsum"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>