<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_name_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_color"
        android:gravity="center"
        android:text="A"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_stdnt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user_default"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_stdnt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kirankumar"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="@font/lato"/>

        <TextView
            android:id="@+id/tv_stdnt_admno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345678"
            android:textColor="@color/_626262"
            android:textSize="18sp"
            android:fontFamily="@font/lato"/>
    </LinearLayout>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sw_presorabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:track="@drawable/custom_track"
        android:layout_gravity="center"
        app:thumbTint="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="8dp"/>


</LinearLayout>