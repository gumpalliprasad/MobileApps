<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@drawable/ic_close"
                android:visibility="visible" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/neet_circle_orange">

            <ImageView
                android:id="@+id/img_correctorwrong"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/jee_green"
                android:padding="8dp"
                android:scaleType="fitXY"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_wrong_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            android:text="You got it wrong"
            android:textColor="#D90000" />


        <TextView
            android:id="@+id/tv_corrct_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The correct answer is D"
            android:layout_gravity="center"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#350124"/>


        <LinearLayout
            android:id="@+id/ll_why"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/bg_borderred"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Why it is wrong?"
                android:layout_marginBottom="10dp"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <myschoolapp.com.gsnedutech.Neet.Utils.NeetCustomWebview
                android:id="@+id/wv_why"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_explanation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/bg_bordergreen"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Hint:"
                android:layout_marginBottom="10dp"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <myschoolapp.com.gsnedutech.Neet.Utils.NeetCustomWebview
                android:id="@+id/wv_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_exp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/neet_bg_borderf7f7fb"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Answer and Solution:"
                android:layout_marginBottom="10dp"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <myschoolapp.com.gsnedutech.Neet.Utils.NeetCustomWebview
                android:id="@+id/wv_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/neet_rounded_corners_expectedques"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/lato"
                android:padding="15dp"
                android:textSize="14sp"
                android:textColor="#575F6B"
                android:text="Next"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_viewall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All Options"
            android:visibility="gone"
            android:layout_gravity="center"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#333333"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
