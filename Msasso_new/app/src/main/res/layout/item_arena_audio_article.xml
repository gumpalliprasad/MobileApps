<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/bg_border_blue_6"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_arena_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Audio 1"
            android:textSize="18sp"
            android:textFontWeight="700"
            android:fontFamily="@font/lato"
            android:textColor="#2B9EB3"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_arena_date"
                android:textColor="#2B9EB3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17-08-2020"
                android:fontFamily="@font/lato"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_arena_time"
                android:textColor="#2B9EB3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:04:38"
                android:fontFamily="@font/lato"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_arena_desc"
            android:textColor="#2B9EB3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="hjfvjdsvjsbhbsv"
            android:textFontWeight="400"
            android:fontFamily="@font/lato"
            android:textSize="16sp"/>

        <ImageView
            android:visibility="gone"
            android:tint="#2B9EB3"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_del"
            android:src="@drawable/ic_delete_hw_section"
            tools:ignore="UseAppTint" />

    </LinearLayout>


</LinearLayout>