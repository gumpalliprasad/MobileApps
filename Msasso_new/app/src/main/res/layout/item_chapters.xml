<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <FrameLayout
        android:id="@+id/fr_chap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_topic_orange_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_chap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start|center"
                    android:fontFamily="@font/lato"
                    android:text="Chapter 1"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_clock_chapters"
                    android:drawablePadding="5dp"
                    android:visibility="gone"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="50 min"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.google.android.material.progressindicator.ProgressIndicator
                android:id="@+id/progressind"
                style="@style/Widget.MaterialComponents.ProgressIndicator.Linear.Determinate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:progress="60"
                android:visibility="gone"
                app:indicatorColor="#AA501E"
                app:indicatorCornerRadius="5dp"
                app:indicatorSize="10dp" />

        </LinearLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>