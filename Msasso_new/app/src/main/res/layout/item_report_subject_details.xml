<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_sub_report"
        android:padding="18dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_sub_name"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/lato"
                android:textColor="#494949"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:textSize="18sp"/>
            <RatingBar
                android:id="@+id/rb"
                android:secondaryProgressTint="@android:color/transparent"
                android:progressTint="#F0C230"
                android:numStars="5"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginLeft="15dp"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="5"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_sub"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_maths_icon_white"
                android:tint="@color/black"
                tools:ignore="UseAppTint" />
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="14sp"
                        android:textColor="#494949"
                        android:alpha="0.5"
                        android:text="Average Score"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:id="@+id/tv_avg_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:textSize="14sp"
                        android:textColor="#494949"
                        android:textStyle="bold"
                        android:text="0.0%"
                        android:fontFamily="@font/lato"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="14sp"
                        android:textColor="#494949"
                        android:alpha="0.5"
                        android:text="Time Spent"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:id="@+id/tv_time_spent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:textSize="14sp"
                        android:textColor="#494949"
                        android:textStyle="bold"
                        android:text="00:00:11"
                        android:fontFamily="@font/lato"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="14sp"
                        android:textColor="#494949"
                        android:alpha="0.5"
                        android:text="Tests Taken"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:id="@+id/tv_test_taken"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:textSize="14sp"
                        android:textColor="#494949"
                        android:textStyle="bold"
                        android:text="02"
                        android:fontFamily="@font/lato"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>