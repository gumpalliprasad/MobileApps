<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl_bg"
            android:background="@drawable/ic_bg_teacher_assignment_teal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_hw_name"
                android:textSize="16sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="700"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number System"/>

                <TextView
                    android:id="@+id/tv_sub_name"
                    android:textSize="14sp"
                    android:fontFamily="@font/lato"
                    android:textFontWeight="400"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Mathematics"/>





            
           <LinearLayout
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textSize="14sp"
                       android:fontFamily="@font/lato"
                       android:textFontWeight="400"
                       android:textColor="#ffffff"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Submission Date"/>
                   <TextView
                       android:id="@+id/tv_date"
                       android:textSize="18sp"
                       android:fontFamily="@font/lato"
                       android:textFontWeight="700"
                       android:textColor="#ffffff"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="13-08-2020"/>

               </LinearLayout>
               <View
                   android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"/>
               <LinearLayout
                   android:id="@+id/ll_sub_students"
                   android:padding="10dp"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:background="@drawable/bg_hw_section_status"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/tv_status_head"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Submissions"
                       android:textColor="#ffffff"
                       android:alpha="0.75"
                       android:textFontWeight="700"
                       android:textSize="12sp"
                       android:fontFamily="@font/lato"/>
                   <TextView
                       android:id="@+id/tv_sub_mission"
                       android:lines="1"
                       android:textAllCaps="true"
                       android:ellipsize="end"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="20/60"
                       android:textColor="#ffffff"
                       android:textSize="18sp"
                       android:textFontWeight="700"
                       android:textStyle="bold"
                       android:fontFamily="@font/lato"/>

               </LinearLayout>

           </LinearLayout>

        </LinearLayout>



    </FrameLayout>

</androidx.cardview.widget.CardView>