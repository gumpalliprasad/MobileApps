<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbars="none"
    android:fillViewport="true"
    android:backgroundTint="@color/white"
    android:background="@drawable/bg_grey_circle_border"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="4dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_grey_circle_border"
            android:src="@drawable/ic_close_black"/>


        <EditText
            android:id="@+id/et_stdn_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:background="@drawable/bg_border_6"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:maxLines="1"
            android:hint="Name"/>

        <EditText
            android:id="@+id/et_sh_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:background="@drawable/bg_border_6"
            android:padding="10dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:hint="School Name"/>

        <EditText
            android:id="@+id/et_adm_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:background="@drawable/bg_border_6"
            android:padding="10dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:hint="Admission Number"/>

        <EditText
            android:id="@+id/et_locality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:background="@drawable/bg_border_6"
            android:padding="10dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:hint="Locality"/>

        <EditText
            android:id="@+id/et_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:background="@drawable/bg_border_6"
            android:padding="10dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:hint="City"/>

        <EditText
            android:id="@+id/et_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:background="@drawable/bg_border_6"
            android:padding="10dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:hint="State"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/lato"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Submit"/>

    </LinearLayout>
</ScrollView>