<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:animateLayoutChanges="true"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Homework/Mathematics"
            android:textColor="#000000"
            android:textSize="18sp"
            android:alpha="0.7"
            android:textStyle="bold"
            android:fontFamily="@font/lato"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:layout_marginLeft="16dp"
                    android:textColor="#64000000"
                    android:textSize="18sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/lato"/>
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Homework"
                    android:textFontWeight="500"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/bg_border_6"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="40dp"
                    android:textColor="#222222"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description *"
                android:layout_marginLeft="16dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textFontWeight="600"
                android:fontFamily="@font/lato"/>
            <TextView
                android:id="@+id/tv_desc"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incididunt excepteur adipisicing minim id cillum Incididunt excepteur adipisicing minim id cillum Incididunt."
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#000000"
                android:lineHeight="28dp"
                android:textSize="15sp"
                android:textFontWeight="400"
                android:fontFamily="@font/lato"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_attachments">
            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attachments"
                android:layout_marginLeft="16dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="700"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_attachments"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Day of Submission"
                    android:layout_marginLeft="16dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textFontWeight="700"
                    android:fontFamily="@font/lato"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15/10/2020"
                    android:textFontWeight="700"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/bg_border_6"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="16dp"
                    android:textColor="#222222"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato"/>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_teacher_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp">
                <LinearLayout
                    android:background="@drawable/bg_palet_d1"
                    android:padding="6dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bell_todo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Remarks"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textFontWeight="700"
                        android:fontFamily="@font/lato"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_submission">
            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submission"
                android:layout_marginLeft="16dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="700"/>

           <LinearLayout
               android:layout_marginLeft="16dp"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
              <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <androidx.recyclerview.widget.RecyclerView
                      android:id="@+id/rv_submit"
                      android:layout_marginLeft="5dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
                  <androidx.recyclerview.widget.RecyclerView
                      android:layout_marginTop="5dp"
                      android:id="@+id/rv_submission"
                      android:layout_marginLeft="5dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
              </LinearLayout>
           </LinearLayout>
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_submit"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grad_tab_select"
                android:text="Submit"
                android:fontFamily="@font/lato"
                android:textColor="#ffffff"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
