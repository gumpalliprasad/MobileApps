<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:animateLayoutChanges="true"
        android:id="@+id/ll_toolbar"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_back"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignments"
            android:textColor="#000000"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_sub_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#494949"
                android:textSize="18sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="700"
                android:text="Number System"/>

            <TextView
                android:minHeight="80dp"
                android:id="@+id/tv_hw_desc"
                android:lineHeight="22dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#232323"
                android:textSize="12sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="700"
                android:text="Incididunt excepteur adipisicing minim id cillum Incididunt excepteur adipisicing minim id cillum Incididunt.Incididunt excepteur adipisicing minim id cillum Incididunt excepteur adipisicing minim id cillum Incididunt."/>


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_view_attachments"
                    android:gravity="center"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#002A6A">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_open_assignments"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:fontFamily="@font/lato"
                        android:textFontWeight="700"
                        android:text="Open Attachments"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="25dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            app:cardCornerRadius="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp">

            <LinearLayout
                android:id="@+id/cv_assigned"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#547D8f">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_assigned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="24sp"
                        android:textColor="#ffffff"
                        android:textFontWeight="700"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:id="@+id/tv_t_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/30"
                        android:textSize="24sp"
                        android:textColor="#494949"
                        android:textFontWeight="700"
                        android:fontFamily="@font/lato"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assigned"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textFontWeight="700"
                    android:fontFamily="@font/lato"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="25dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            app:cardCornerRadius="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp">

            <LinearLayout
                android:id="@+id/cv_submission"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#50BDA4">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_submitted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="24sp"
                        android:textColor="#ffffff"
                        android:textFontWeight="700"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/30"
                        android:textSize="24sp"
                        android:textColor="#494949"
                        android:textFontWeight="700"
                        android:fontFamily="@font/lato"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submitted"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textFontWeight="700"
                    android:fontFamily="@font/lato"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            app:cardCornerRadius="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp">

            <LinearLayout
                android:id="@+id/cv_reviewed"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FF4646">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_reviewed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="24sp"
                        android:textColor="#ffffff"
                        android:textFontWeight="700"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:id="@+id/tv_tot_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/30"
                        android:textSize="24sp"
                        android:textColor="#494949"
                        android:textFontWeight="700"
                        android:fontFamily="@font/lato"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviewed"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textFontWeight="700"
                    android:fontFamily="@font/lato"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            app:cardCornerRadius="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp">

            <LinearLayout
                android:id="@+id/cv_re_assigned"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#F17427">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_reassigned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="24sp"
                        android:textColor="#ffffff"
                        android:textFontWeight="700"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:id="@+id/tv_total_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/30"
                        android:textSize="24sp"
                        android:textColor="#494949"
                        android:textFontWeight="700"
                        android:fontFamily="@font/lato"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reassigned"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textFontWeight="700"
                    android:fontFamily="@font/lato"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="2dp">
        <TextView
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Upload Keys"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_grad_tab_select"
            android:textColor="#ffffff"
            android:textFontWeight="700"
            android:fontFamily="@font/lato"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>