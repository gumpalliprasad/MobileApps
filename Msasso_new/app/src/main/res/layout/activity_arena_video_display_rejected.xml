            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center" />

            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:visibility="gone" />

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/exoplayer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="gone"
                app:controller_layout_id="@layout/player_contols"
                app:show_buffering="always" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Orci tempor dolor vitae tum pretium vitae. Ultrices accumsan eu vulputate sit mi. Sem mattis vitae, ut purus amet, feugiat in eu. Ante Lorem ipsum dolor sit amet."
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:id="@+id/tv_desc"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_student"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By venu \u2022 10 days ago"
                        android:textSize="15sp"
                        android:textColor="#494949"
                        android:alpha="0.75"
                        android:textFontWeight="400"
                        android:fontFamily="@font/lato"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:textFontWeight="700"
                                android:text="Teacher Comment"
                                android:fontFamily="@font/lato"
                                />

                            <TextView
                                android:id="@+id/tv_comment"
                                android:layout_marginTop="30dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ex esse deserunt non elit irure elit. Esse laborum minim ex elit est proident cupidatat culpa proident cillum consectetur eu deserunt sint."
                                android:textSize="15sp"
                                android:lineHeight="24sp"
                                android:textColor="#000000"
                                android:alpha="0.75"
                                android:textFontWeight="400"
                                android:fontFamily="@font/lato"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/lato"
                    android:text="Watch Next"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_files"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Video File"
                    android:drawableTint="#64000000"
                    android:textColor="#64000000"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato"
                    android:textFontWeight="500"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_video_arena"/>

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_new_files">
                    <TextView
                        android:id="@+id/tv_new_files"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recently added Files"
                        android:drawableTint="#64000000"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:fontFamily="@font/lato"
                        android:textFontWeight="700"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="20dp"
                        android:layoutAnimation="@anim/layout_animation_fall_down"
                        android:id="@+id/rv_new_files"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/button_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_2e2e8b"
                    android:layout_gravity="center_horizontal"
                    android:text="Re-Submit"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textFontWeight="700"
                    android:textColor="#ffffff"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/lato"/>

            </LinearLayout>

