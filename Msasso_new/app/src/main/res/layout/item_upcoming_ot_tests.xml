<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:gravity="center"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_test_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="7sp"
            android:maxLines="1"
            android:textColor="@color/_9c222222"
            android:textSize="24sp"
            tools:text="Daily Test" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/_51c4d6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4sp"
                    android:text="Start on"
                    android:textColor="@color/_9c222222"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_test_start_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/_9c222222"
                    android:textSize="12sp"
                    tools:text="15/08/2018, 12:20 PM" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4sp"
                    android:text="Ends on"
                    android:id="@+id/tv_end"
                    android:textColor="@color/_9c222222"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_test_end_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/_9c222222"
                    android:textSize="12sp"
                    tools:text="15/08/2018, 12:20 PM" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                android:text="Status : "
                android:id="@+id/tv_stat"
                android:textColor="@color/_787878"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_test_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/_ffb100"
                android:textSize="12sp"
                tools:text="Upcoming" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_start_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:lineSpacingExtra="4sp"
            android:background="@drawable/rounded_corners_blue14sh0pad"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:paddingEnd="16dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="Start Test" />


    </LinearLayout>


</androidx.cardview.widget.CardView>