<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbars="none"
    android:fillViewport="true"
    android:backgroundTint="@color/white"
    android:background="@drawable/bg_grey_circle_border"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Select an Option"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="-10dp"
                android:src="@drawable/ic_close_black"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_just_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_qbox_ff2d2d_round">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="16dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_qbox_send"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/lato"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="10dp"
                    android:text="Just Reply"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reply_publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_qbox_ff2d2d_round">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:paddingStart="16dp"
                    android:src="@drawable/ic_qbox_send"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/lato"
                    android:paddingBottom="10dp"
                    android:text="Reply And Publish"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_qbox_ff2d2d_round">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:paddingStart="16dp"
                    android:src="@drawable/ic_qbox_send"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:textFontWeight="600"
                    android:fontFamily="@font/lato"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="10dp"
                    android:text="Reject"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alt_approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#80000000"
                android:textSize="14sp"
                android:fontFamily="@font/lato"
                android:textFontWeight="600"
                android:text="If you “just reply” user will be notified."/>

            <EditText
                android:id="@+id/et_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_6"
                android:fontFamily="@font/lato"
                android:textSize="14sp"
                android:padding="14dp"
                android:maxLines="8"
                android:lines="8"
                android:gravity="start"
                android:hint="Type your reply"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/black"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lato"
                android:text="Add Image (Optional)"
                android:textColor="#64000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:id="@+id/ll_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="16dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_qbox_ff2d2d_round">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_qbox_send"/>

                <TextView
                    android:id="@+id/tv_send_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato"
                    android:textFontWeight="600"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="10dp"
                    android:text="Send"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>