<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:animateLayoutChanges="true"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Homework/Mathematics"
            android:textColor="#000000"
            android:textSize="18sp"
            android:alpha="0.7"
            android:textStyle="bold"
            android:fontFamily="@font/lato"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_teacher_review"
        android:gravity="center"
        android:background="@drawable/bg_hw_feedback_os"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:alpha="0.75"
            android:textFontWeight="700"
            android:fontFamily="@font/lato"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excellent"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textFontWeight="700"
            android:id="@+id/tv_feed_back"
            android:fontFamily="@font/lato"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_student_submissions"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_feed_back"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_no_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Comments Available"
        android:gravity="center"
        android:textSize="24sp"
        android:visibility="gone"
        android:fontFamily="@font/lato"
        android:textFontWeight="700"
        android:textColor="#1A609D"/>

</LinearLayout>