<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxHeight="200dp"
    android:background="@drawable/bg_border_6"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <myschoolapp.com.gsnedutech.Util.CustomWebview
        android:id="@+id/cwv_question"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_attached_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:text="0 files attached"/>

        <ImageView
            android:id="@+id/iv_submit"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:fontFamily="@font/lato"
            android:src="@drawable/neet_next"
            app:tint="@color/black"
            android:layout_margin="8dp"
            android:text=">"/>



    </LinearLayout>



</LinearLayout>