<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#40e5e5e5"
    tools:context=".MockTestNew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/test_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="EAMCET"
                android:textColor="@android:color/black"
                android:textSize="24dp"
                android:textStyle="normal" />

<!--            <rankr.io.nrankguru.Utils.MyCustomProgressBar-->
<!--                android:id="@+id/progressBarCircle"-->
<!--                android:layout_width="32dp"-->
<!--                android:layout_height="32dp" />-->


<!--            <TextView-->
<!--                android:id="@+id/tv_test_timer"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:fontFamily="sans-serif"-->
<!--                android:text="02:10:34"-->
<!--                android:textColor="@android:color/black"-->
<!--                android:textSize="17dp"-->
<!--                android:textStyle="bold" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinner"
                    style="@style/test_spinner"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_gravity="top"
                    android:spinnerMode="dialog"
                    android:visibility="visible" />

                <!--<TextView-->
                <!--android:id="@+id/sub_title"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:ellipsize="end"-->
                <!--android:padding="1dp"-->
                <!--android:singleLine="true"-->
                <!--android:text="MCQ"-->
                <!--android:textSize="14dp" />-->

                <TextView
                    android:id="@+id/tv_test_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:fontFamily="sans-serif"
                    android:text="Answered : 0/90"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_test_qlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_weight="1"
                android:src="@drawable/ic_listicon" />

            <TextView
                android:id="@+id/tv_test_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:text="02:10:34"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_test_finish"
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:background="@drawable/bg_grad_next_button"
                android:elevation="4dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:letterSpacing="0.06"
                android:padding="5dp"
                android:text="@string/action_submit"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_que_no_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
          />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lvoptions"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/que_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />

            <myschoolapp.com.gsnedutech.Util.CustomWebview
                android:id="@+id/wv_test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="4dp"
                android:layout_margin="8dp"
                android:visibility="gone" />

            <!--MTF-->
            <ScrollView
                android:id="@+id/ll_mfq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:scrollbars="none">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="6dp"
                        android:text="Match the following"
                        android:textColor="#de000000"
                        android:textSize="14dp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center_horizontal"
                            android:text="Column A"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center_horizontal"
                            android:text="Column B"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_que"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </ScrollView>

            <TableLayout
                android:id="@+id/tl_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_buttons"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:visibility="gone"
                android:background="#FFFFFF"
                android:stretchColumns="*" />

        </LinearLayout>

        <!--Fill In the Blanks-->
        <LinearLayout
            android:id="@+id/ll_fib"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:orientation="vertical"
            android:visibility="visible">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_fibans"
                    android:orientation="vertical"/>
            </HorizontalScrollView>


        </LinearLayout>
        <!--MCQ -->
        <LinearLayout
            android:id="@+id/ll_mcq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_a"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/practice_btn_optsel"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="A"
                android:textColor="#9b9b9b"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_b"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/practice_btn_optsel"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="B"
                android:textColor="#9b9b9b"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_c"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/practice_btn_optsel"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="C"
                android:textColor="#9b9b9b"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_d"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/practice_btn_optsel"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="D"
                android:textColor="#9b9b9b"
                android:textSize="18dp" />

        </LinearLayout>
        <!--TRUE or False-->
        <LinearLayout
            android:id="@+id/ll_tf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#ececec"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_true"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_cust_test_opt_unselected"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="True"
                android:textColor="#9b9b9b"
                android:textSize="16dp" />


            <Button
                android:id="@+id/btn_false"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_cust_test_opt_unselected"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="False"
                android:textColor="#9b9b9b"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_itq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#00ffffff"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" />


            <EditText
                android:id="@+id/et_itq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="8"
                android:padding="8dp"
                android:textSize="14sp"
                android:inputType="numberDecimal|numberSigned"
                android:background="@drawable/flexbox_item_background"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_next"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_test_clear"
                android:text="Clear"
                android:textAllCaps="false"
                android:textColor="#80494949"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_review_next"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_test_clear"
                android:gravity="center"
                android:padding="8dp"
                android:text="Mark For Review &amp; Next"
                android:textAllCaps="false"
                android:textColor="#80494949"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_save_next"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_grad_next_button"
                android:gravity="center"
                android:padding="8dp"
                android:text="Save &amp; Next"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hidden_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#d8000000"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_cross_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Close"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/quelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Maths"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="bold" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_quelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quelist"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/customeboader"
                android:scrollbars="none" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>