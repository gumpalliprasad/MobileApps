<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="16dp"
        android:animateLayoutChanges="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_back"
                android:src="@drawable/ic_back"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/sp_options"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/mySpinnerBigText"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar_month_year"/>

            <TextView
                android:id="@+id/tv_month_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/lato"
                android:text="Sep 2020"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:textSize="18sp" />

        </LinearLayout>




        <LinearLayout
            android:animateLayoutChanges="true"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_tab_back_ground">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:animateLayoutChanges="true"
                    android:id="@+id/tv_active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textAllCaps="true"
                    android:textColor="#494949"
                    android:alpha="0.75"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:padding="12dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_active_count"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:textSize="10sp"
                        android:padding="3dp"
                        android:fontFamily="@font/lato"
                        android:id="@+id/tv_active_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textColor="#000000"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:animateLayoutChanges="true"
                    android:id="@+id/tv_pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textAllCaps="true"
                    android:textColor="#494949"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:padding="12dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_pending_count"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:textSize="10sp"
                        android:padding="3dp"
                        android:fontFamily="@font/lato"
                        android:id="@+id/tv_pending_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textColor="#000000"/>
                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:animateLayoutChanges="true"
                    android:id="@+id/tv_completed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textAllCaps="true"
                    android:textColor="#494949"
                    android:alpha="0.75"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:padding="12dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_completed_count"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:textSize="10sp"
                        android:padding="3dp"
                        android:fontFamily="@font/lato"
                        android:id="@+id/tv_completed_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textColor="#000000"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layoutAnimation="@anim/layout_animation_left_in"
            android:id="@+id/rv_assignments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"/>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_backdrop"
        android:padding="16dp"
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_fbm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter by Month"
            android:gravity="end"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:layout_marginBottom="40dp"/>
        <TextView
            android:id="@+id/tv_fbd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter by Date"
            android:gravity="end"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:layout_marginBottom="108dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_filter"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="28dp"
        android:layout_margin="16dp"
        android:layout_gravity="end|bottom">
        <ImageView
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_filter"
            android:background="@drawable/bg_grad_main">

        </ImageView>
    </androidx.cardview.widget.CardView>

</FrameLayout>