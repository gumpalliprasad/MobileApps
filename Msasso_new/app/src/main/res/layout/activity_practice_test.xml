<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_grad_test_header"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_back"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_white_back"/>
            <TextView
                android:id="@+id/tv_type_header"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Practice"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/lato"/>

        </LinearLayout>




        <TextView
            android:id="@+id/tv_practice_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1:00 Min left"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:fontFamily="@font/lato"/>

<!--        <com.google.android.material.progressindicator.ProgressIndicator-->
<!--            style="@style/Widget.MaterialComponents.ProgressIndicator.Linear.Determinate"-->
<!--            app:indicatorSize="8dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:indicatorColor="#FFAD03"-->
<!--            app:trackColor="#ffffff"-->
<!--            android:visibility="gone"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginLeft="16dp"-->
<!--            android:layout_marginRight="16dp"-->
<!--            android:progress="60"-->
<!--            app:indicatorCornerRadius="5dp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_queNo"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:fontFamily="@font/lato"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|end"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                android:padding="5dp">

                <Chronometer
                    android:id="@+id/chronometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


                <!--<TextView-->
                <!--android:id="@+id/tv_test_count"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:fontFamily="sans-serif"-->
                <!--android:text="0/0"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:textSize="12dp"-->
                <!--android:textStyle="normal" />-->

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners_single_e5e5e5"
        android:orientation="vertical"
        android:paddingTop="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/lvoptions"
                android:layout_weight="1"
                android:layout_marginTop="8dp"

                android:background="@drawable/rounded_corners_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/que_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black" />

                <myschoolapp.com.gsnedutech.Util.CustomWebview
                    android:id="@+id/wv_test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:layout_margin="8dp"
                    android:visibility="gone" />


            </LinearLayout>

            <!--Fill In the Blanks-->
            <ScrollView
                android:id="@+id/ll_fib"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/layout_fibans"
                            android:orientation="vertical"/>
                    </HorizontalScrollView>


                </LinearLayout>

            </ScrollView>

            <!--MCQ -->
            <LinearLayout
                android:id="@+id/ll_mcq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_a"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/practice_btn_optsel"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:text="A"
                    android:textColor="#9b9b9b"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn_b"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/practice_btn_optsel"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:text="B"
                    android:textColor="#9b9b9b"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn_c"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/practice_btn_optsel"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:text="C"
                    android:textColor="#9b9b9b"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn_d"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/practice_btn_optsel"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:text="D"
                    android:textColor="#9b9b9b"
                    android:textSize="18dp" />

            </LinearLayout>
            <!--TRUE or False-->
            <LinearLayout
                android:id="@+id/ll_tf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ececec"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_true"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_cust_test_opt_unselected"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:text="True"
                    android:textColor="#9b9b9b"
                    android:textSize="16dp" />


                <Button
                    android:id="@+id/btn_false"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_cust_test_opt_unselected"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:text="False"
                    android:textColor="#9b9b9b"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_itq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#00ffffff"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" />


                <EditText
                    android:id="@+id/et_itq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="8"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:inputType="numberDecimal|numberSigned"
                    android:background="@drawable/flexbox_item_background"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_grad_next_button"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Submit And Review"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>