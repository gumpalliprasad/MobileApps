<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_back"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/sofia_pro_bold"
            android:gravity="left|center"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_close"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_close"
            android:visibility="visible" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:padding="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_sub_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/muli_bold"
            android:gravity="center"
            android:text="Physics"
            android:textColor="#000000"
            android:textSize="20sp" />


    </RelativeLayout>




    <LinearLayout
        android:id="@+id/ll_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/jee_circle_orange"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_correctorwrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_close" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_wrong_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sofia_pro_bold"
        android:text="You got it wrong"
        android:textColor="#D90000"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_corrct_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sofia_pro_medium"
        android:text="The correct answer is D"
        android:textColor="#350124"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_why"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_borderred"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:text="Why it is wrong?"
                        android:layout_marginBottom="10dp"
                        android:textColor="#2196F3"
                        android:textSize="18sp" />

                    <myschoolapp.com.gsnedutech.Neet.Utils.NeetCustomWebview
                        android:id="@+id/wv_why"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_exp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/jee_bg_borderf7f7fb"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:text="Answer and Solution:"
                        android:layout_marginBottom="10dp"
                        android:textColor="#2196F3"
                        android:textSize="18sp" />

                    <myschoolapp.com.gsnedutech.Neet.Utils.NeetCustomWebview
                        android:id="@+id/wv_explanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_bordergreen"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:text="Reference:"
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:textColor="#2196F3"
                        android:textSize="18sp" />

                    <myschoolapp.com.gsnedutech.Neet.Utils.NeetCustomWebview
                        android:id="@+id/wv_reference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_bordergreen"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:text="Other Probabilities:"
                        android:layout_marginBottom="10dp"
                        android:textColor="#2196F3"
                        android:textSize="18sp" />

                    <myschoolapp.com.gsnedutech.Neet.Utils.NeetCustomWebview
                        android:id="@+id/wv_other_possible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:id="@+id/ll_expected_que"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/jee_rounded_corners_expectedques"
                android:fontFamily="@font/sofia_pro_bold"
                android:padding="15dp"
                android:layout_marginRight="20dp"
                android:text="Predicted Questions"
                android:textColor="#575F6B"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/ll_next_que"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/jee_rounded_corners_expectedques"
                android:fontFamily="@font/sofia_pro_bold"
                android:padding="15dp"
                android:text="Next Question"
                android:textColor="#575F6B"
                android:textSize="14sp" />

        </LinearLayout>




    </LinearLayout>


</LinearLayout>