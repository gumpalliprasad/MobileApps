<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TeacherStdntLRinDetail">


    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Leave Request"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/lato"/>
    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_student"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/user_default"/>

                <TextView
                    android:id="@+id/tv_student_name"
                    android:fontFamily="@font/lato"
                    android:textFontWeight="700"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#494949"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student Name"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="@font/lato"
                        android:textSize="14sp"
                        android:textColor="#494949"
                        android:alpha="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reason"/>
                    <TextView
                        android:id="@+id/tv_reason"
                        android:fontFamily="@font/lato"
                        android:textSize="16sp"
                        android:textFontWeight="600"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Health Issue"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3">
                    <TextView
                        android:fontFamily="@font/lato"
                        android:textSize="14sp"
                        android:textColor="#494949"
                        android:alpha="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Applied On"/>
                    <TextView
                        android:id="@+id/tv_applied"
                        android:fontFamily="@font/lato"
                        android:textSize="16sp"
                        android:textFontWeight="600"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="22 Sep 2020"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="@font/lato"
                        android:textSize="14sp"
                        android:textColor="#494949"
                        android:alpha="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="From Date"/>
                    <TextView
                        android:id="@+id/tv_lr_from"
                        android:fontFamily="@font/lato"
                        android:textSize="16sp"
                        android:textFontWeight="600"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="22 Sep 2020"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:fontFamily="@font/lato"
                        android:textSize="14sp"
                        android:textColor="#494949"
                        android:alpha="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="To Date"/>
                    <TextView
                        android:id="@+id/tv_lr_to"
                        android:fontFamily="@font/lato"
                        android:textSize="16sp"
                        android:textFontWeight="600"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="22 Sep 2020"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:fontFamily="@font/lato"
                        android:textSize="14sp"
                        android:textColor="#494949"
                        android:alpha="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Leave For"/>
                    <TextView
                        android:id="@+id/tv_lr_days"
                        android:fontFamily="@font/lato"
                        android:textSize="16sp"
                        android:textFontWeight="600"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 days"/>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_lr_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:minLines="10"
                android:fontFamily="@font/lato"
                android:textColor="@color/black"
                android:textSize="16sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato"
                    android:text="Take Action"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="6dp">

                    <Spinner
                        style="@style/mySpinner"
                        android:id="@+id/sp_leave_status"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:background="@drawable/bg_grad_next_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/lato"
                android:textSize="18sp"
                android:text="Done"/>


        </LinearLayout>

    </ScrollView>






</LinearLayout>