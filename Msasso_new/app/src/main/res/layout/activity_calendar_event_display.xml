<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Calendar And Events"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/lato"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_main"
                android:padding="20dp"
                android:background="@drawable/bg_orange_grad_cal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Venugopalâ€™s Birthday"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/lato"/>
                <TextView
                    android:id="@+id/tv_date_time"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:00-11:30 AM"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/lato"/>
                <TextView
                    android:id="@+id/tv_desc"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="School grounds Hyderabad"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/lato"/>

            </LinearLayout>

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:lineHeight="22sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="\u2022 "
                       android:textSize="18sp"
                       android:textColor="#494949"
                       android:fontFamily="@font/lato"/>
                   <TextView
                       android:lineHeight="22sp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text=" Event Starts from 10AM"
                       android:textSize="18sp"
                       android:textColor="#494949"
                       android:fontFamily="@font/lato"/>
               </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:lineHeight="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u2022 "
                        android:textSize="18sp"
                        android:textColor="#494949"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:lineHeight="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Event Ends at 11:30AM"
                        android:textSize="18sp"
                        android:textColor="#494949"
                        android:fontFamily="@font/lato"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:lineHeight="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u2022 "
                        android:textSize="18sp"
                        android:textColor="#494949"
                        android:fontFamily="@font/lato"/>
                <TextView
                    android:lineHeight="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" ID Card is Must to enter into the Auditorium"
                    android:textSize="18sp"
                    android:textColor="#494949"
                    android:fontFamily="@font/lato"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>