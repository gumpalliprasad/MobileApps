<androidx.cardview.widget.CardView
    android:layout_width="200dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:id="@+id/ll_main_bg"
        android:background="#FFFF88"
        android:orientation="vertical">
        ​
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Notes Title"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/lato"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_edit"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_notes"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_delete"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_notes"/>
        </LinearLayout>
        ​
        <TextView
            android:id="@+id/tv_note"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxHeight="150dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#494949"
            android:fontFamily="@font/lato"
            android:text="Sint nostrud do ipsum dolor proident esse aliquip cillum dolor adipisicing excepteur. Sint nostrud do ipsum. Sint nostrud do ipsum dolor proident esse aliquip cillum dolor adipisicing excepteur."/>
        ​
        <TextView
            android:id="@+id/tv_createddate"
            android:layout_marginTop="10dp"
            android:alpha="0.25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="end"
            android:text="Created on Aug 11"
            android:textColor="#494949"
            android:fontFamily="@font/lato"
            />
        ​
    </LinearLayout>
    ​
</androidx.cardview.widget.CardView>