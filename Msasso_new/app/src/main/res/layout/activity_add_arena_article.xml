<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="-20dp"
        app:cardCornerRadius="25dp"
        android:elevation="4dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="36dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_back"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Article"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/lato"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Article"
            android:textSize="18sp"
            android:textFontWeight="700"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/lato"
            android:textColor="#000000"/>

        <FrameLayout
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_border_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_add_image_cover"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_add_image"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arena_add_image"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap to add image"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato"/>
            </LinearLayout>



        </LinearLayout>



        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="2dp">
        <EditText
            android:layout_gravity="bottom"
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Article Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:padding="10dp"
            android:background="@null"
            />
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="2dp">
            <EditText
                android:id="@+id/et_desc_text"
                android:lines="10"
                android:gravity="top|left"
                android:maxLines="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Write or paste in articles"
                android:textSize="16sp"
                android:fontFamily="@font/lato"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@null"
                />


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_attachments"
                android:padding="10dp"
                android:alpha="0.5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_paperclip"/>
            <ImageView
                android:id="@+id/iv_rec"
                android:tint="#ABABAB"
                android:padding="10dp"
                android:alpha="0.5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_mic_small_white"
                tools:ignore="UseAppTint" />
            <ImageView
                android:id="@+id/iv_vid_rec"
                android:tint="#ABABAB"
                android:padding="10dp"
                android:alpha="0.5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_video_arena"
                tools:ignore="UseAppTint" />

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_draft_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous Files"
                android:drawableTint="#64000000"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                android:fontFamily="@font/lato"
                android:textFontWeight="700"/>



            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:layoutAnimation="@anim/layout_animation_fall_down"
                android:id="@+id/rv_prev_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_new_files"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recently added Files"
            android:drawableTint="#64000000"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center"
            android:fontFamily="@font/lato"
            android:textFontWeight="700"/>


        <LinearLayout
            android:id="@+id/ll_audio"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio Attachments"
                android:textSize="12sp"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:fontFamily="@font/lato"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rv_audios"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_video"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vid_att"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Attachments"
                android:textSize="12sp"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:fontFamily="@font/lato"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rv_vids"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_other"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Attachments"
                android:textSize="12sp"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:fontFamily="@font/lato"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rv_docs"
                android:layout_marginTop="5dp"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Submit"
            android:background="@drawable/bg_grad_tab_select"
            android:gravity="center"
            android:textColor="#ffffff"
            android:fontFamily="@font/lato"
            android:textSize="18sp"
            android:textStyle="bold"/>





    </LinearLayout>

</androidx.core.widget.NestedScrollView>


</LinearLayout>