<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="#ffaf84"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_course_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:padding="6dp"
            android:src="@drawable/improve_verbal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Course Name"/>

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:textSize="12sp"
                android:alpha="0.75"
                android:text="Teacher Name"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fm_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            xmlns:android="http://schemas.android.com/apk/res/android">

            <myschoolapp.com.gsnedutech.Util.CircularProgressBar
                android:id="@+id/cp_cProgress"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
            <LinearLayout
                android:id="@+id/ll_layout"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center">

                <ImageView
                    android:padding="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:backgroundTint="#ff2424"
                    app:tint="#00D1FF"
                    android:src="@drawable/ic_play_button"/>
            </LinearLayout>

        </FrameLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>