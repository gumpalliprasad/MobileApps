<androidx.cardview.widget.CardView android:layout_width="160dp"
    android:layout_height="135dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#001B2E"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_hw_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number System"
                android:textColor="#ffffff"
                android:fontFamily="@font/lato"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_hw_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:textColor="#ffffff"
                android:fontFamily="@font/lato"
                android:alpha="0.3"
                android:textSize="12sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submission Date"
                android:textColor="#ffffff"
                android:fontFamily="@font/lato"
                android:alpha="0.3"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_hw_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20th Aug 2020"
                android:textColor="#ffffff"
                android:fontFamily="@font/lato"
                android:textSize="12sp"/>


        </LinearLayout>
        <ImageView
            android:id="@+id/iv_hw_sub"
            android:layout_marginRight="5dp"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.3"
            android:src="@drawable/ic_maths_icon_white"/>
    </FrameLayout>



</androidx.cardview.widget.CardView>