<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_prep_courses_jee" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato"
                android:text="JEE Foundation"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato"
            android:text="Learn"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/lato"
            android:gravity="center_vertical"
            android:text="Practice"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#26494949" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_test_prac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/lato"
            android:gravity="center_vertical"
            android:text="Mock Test"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#26494949" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_test_mock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/tv_learn_n_prac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/lato"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:text="Learn &amp; Practice"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/iv_prevjee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Jee Previous Papers with Solutions"
            android:gravity="center"
            android:drawableRight="@drawable/ic_prevpapers"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:visibility="gone"
            android:background="@drawable/bg_prev_papers"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--        <TextView-->
        <!--            android:id="@+id/iv_prevadvjee"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_marginTop="20dp"-->
        <!--            android:text=" Jee Advance Previous Papers with Solutions"-->
        <!--            android:drawableRight="@drawable/ic_prevpapers"-->
        <!--            android:drawablePadding="10dp"-->
        <!--            android:padding="15dp"-->
        <!--            android:gravity="center"-->
        <!--            android:background="@drawable/bg_prev_papers"-->
        <!--            android:textColor="#000000"-->
        <!--            android:textSize="18sp"-->
        <!--            android:textStyle="bold" />-->

        <TextView
            android:id="@+id/iv_prevneet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:text=" Neet Previous Papers with Solutions"
            android:drawableRight="@drawable/ic_prevpapers"
            android:padding="15dp"
            android:visibility="gone"
            android:gravity="center"
            android:background="@drawable/bg_prev_papers"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>