<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_gradient_vectors"
        android:layout_gravity="right"/>


    <LinearLayout
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ll_top"
                android:visibility="visible"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I'm A"
                    android:textSize="36sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/lato"/>

                <ImageView
                    android:layout_marginBottom="20dp"
                    android:id="@+id/iv_selection"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_i"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_student_select"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_top_reg"
                android:visibility="gone"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_i"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_student_no_select"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Name"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/lato"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12AAS5556D"
                    android:textSize="12sp"
                    android:textColor="#494949"
                    android:fontFamily="@font/lato"/>
            </LinearLayout>


        </LinearLayout>
        <ScrollView
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:animateLayoutChanges="true"
                    android:visibility="gone"
                    android:padding="25dp"
                    android:background="@drawable/bg_login_bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_login">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:fontFamily="@font/lato"/>

                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:fontFamily="@font/lato"/>

                    <EditText
                        android:id="@+id/et_user_name"
                        android:backgroundTint="#32ffffff"
                        android:fontFamily="@font/lato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:paddingBottom="15dp"
                        android:textColorHint="#32ffffff"
                        android:hint="Enter Your User Name"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:fontFamily="@font/lato"/>

                    <FrameLayout
                        android:animateLayoutChanges="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_user_password"
                            android:backgroundTint="#32ffffff"
                            android:fontFamily="@font/lato"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:paddingBottom="15dp"
                            android:textColorHint="#32ffffff"
                            android:hint="Enter Your Password"/>
                        <ImageView
                            android:id="@+id/password_visible"
                            android:animateLayoutChanges="true"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical|right"
                            app:tint="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_no_visible"/>
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_marginBottom="20dp"
                        android:id="@+id/btn_login_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:gravity="center"
                        android:fontFamily="@font/lato"
                        android:textColor="#ffffff"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_right_white_arrow"
                        android:layout_gravity="center"
                        android:drawablePadding="12dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:padding="40dp"
                    android:background="@drawable/bg_login_bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_admission">

                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admission Number"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:fontFamily="@font/lato"/>

                    <EditText
                        android:backgroundTint="#32ffffff"
                        android:fontFamily="@font/lato"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:paddingBottom="15dp"
                        android:textColorHint="#32ffffff"
                        android:hint="Enter Your Admission Number"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_marginBottom="20dp"
                        android:id="@+id/btn_admission_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:gravity="center"
                        android:fontFamily="@font/lato"
                        android:textColor="#ffffff"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_right_white_arrow"
                        android:layout_gravity="center"
                        android:drawablePadding="12dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:padding="25dp"
                    android:background="@drawable/bg_login_bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_password">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PINCODE"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Your 6 digit code"
                        android:textColor="#64ffffff"
                        android:textSize="15sp"
                        android:fontFamily="@font/lato"/>

                    <com.alimuzaffar.lib.pin.PinEntryEditText
                        android:id="@+id/txt_pin_entry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textIsSelectable="false"
                        android:textSize="30sp"
                        android:textColor="#ffffff"
                        app:pinBackgroundDrawable="@drawable/bg_pin"
                        app:pinAnimationType="popIn"
                        android:gravity="center"
                        app:pinTextBottomPadding="8dp"
                        app:pinCharacterMask="*"
                        app:pinLineStroke="2dp"
                        app:pinLineStrokeSelected="4dp"
                        app:pinCharacterSpacing="5dp"
                        app:pinBackgroundIsSquare="false"
                        app:pinLineColors="@android:color/transparent"
                        android:layoutDirection="ltr"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:drawableTop="@drawable/ic_finger_print"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scan Your Finger"
                        android:textColor="#64ffffff"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:fontFamily="@font/lato"/>


                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/bg_login_bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_confirm">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm is that You?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/lato"/>

                    <TextView
                        android:id="@+id/btn_confirm"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_white_8"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:textColor="#3FC2A2"
                        android:fontFamily="@font/lato"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Yes That's me"/>
                    <TextView
                        android:id="@+id/btn_back"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_back_admisiion"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/lato"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="No, Go Back"/>

                </LinearLayout>

                <LinearLayout
                    android:paddingLeft="55dp"
                    android:paddingRight="55dp"
                    android:paddingTop="55dp"
                    android:paddingBottom="25dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_login_bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_dob">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm Your Date Of Birth"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/lato"/>

                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:maxLength="2"
                            android:inputType="number"
                            android:backgroundTint="#32ffffff"
                            android:fontFamily="@font/lato"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:paddingBottom="15dp"
                            android:textColorHint="#32ffffff"
                            android:hint="Day"/>
                        <EditText
                            android:maxLength="2"
                            android:inputType="number"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="#32ffffff"
                            android:fontFamily="@font/lato"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:paddingBottom="15dp"
                            android:textColorHint="#32ffffff"
                            android:hint="Month"/>
                        <EditText
                            android:maxLength="4"
                            android:inputType="number"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="#32ffffff"
                            android:fontFamily="@font/lato"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:paddingBottom="15dp"
                            android:textColorHint="#32ffffff"
                            android:hint="Year"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_marginBottom="20dp"
                        android:id="@+id/btn_dob_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:gravity="center"
                        android:fontFamily="@font/lato"
                        android:textColor="#ffffff"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_right_white_arrow"
                        android:layout_gravity="center"
                        android:drawablePadding="12dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:padding="25dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_login_bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_otp">

                    <EditText
                        android:backgroundTint="#32ffffff"
                        android:fontFamily="@font/lato"
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:paddingBottom="15dp"
                        android:textColorHint="#32ffffff"
                        android:hint="Enter OTP"/>

                    <TextView
                        android:inputType="number"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resend OTP"
                        android:textSize="13sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/lato"/>

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SMS is send to this phone number"
                        android:textSize="14sp"
                        android:textColor="#64ffffff"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6789998212"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change Phone Number on Request"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/lato"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_marginBottom="5dp"
                        android:id="@+id/btn_otp_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:gravity="center"
                        android:fontFamily="@font/lato"
                        android:textColor="#ffffff"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_right_white_arrow"
                        android:layout_gravity="center"
                        android:drawablePadding="12dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:padding="25dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_login_bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_create_password">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create 6 Digit Password"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Your 6 digit code"
                        android:textColor="#64ffffff"
                        android:textSize="15sp"
                        android:fontFamily="@font/lato"/>

                    <com.alimuzaffar.lib.pin.PinEntryEditText
                        android:id="@+id/et_new_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textIsSelectable="false"
                        android:textSize="30sp"
                        android:textColor="#ffffff"
                        app:pinBackgroundDrawable="@drawable/bg_pin"
                        app:pinAnimationType="popIn"
                        android:gravity="center"
                        app:pinTextBottomPadding="8dp"
                        app:pinCharacterMask="*"
                        app:pinLineStroke="2dp"
                        app:pinLineStrokeSelected="4dp"
                        app:pinCharacterSpacing="5dp"
                        app:pinBackgroundIsSquare="false"
                        app:pinLineColors="@android:color/transparent"
                        android:layoutDirection="ltr"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Your 6 digit code"
                        android:textColor="#64ffffff"
                        android:textSize="15sp"
                        android:fontFamily="@font/lato"/>

                    <com.alimuzaffar.lib.pin.PinEntryEditText
                        android:id="@+id/et_new_pin_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textIsSelectable="false"
                        android:textSize="30sp"
                        android:textColor="#ffffff"
                        app:pinBackgroundDrawable="@drawable/bg_pin"
                        app:pinAnimationType="popIn"
                        android:gravity="center"
                        app:pinTextBottomPadding="8dp"
                        app:pinCharacterMask="*"
                        app:pinLineStroke="2dp"
                        app:pinLineStrokeSelected="4dp"
                        app:pinCharacterSpacing="5dp"
                        app:pinBackgroundIsSquare="false"
                        app:pinLineColors="@android:color/transparent"
                        android:layoutDirection="ltr"
                        />

                    <View
                        android:minHeight="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_marginBottom="5dp"
                        android:id="@+id/btn_cp_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:gravity="center"
                        android:fontFamily="@font/lato"
                        android:textColor="#ffffff"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_right_white_arrow"
                        android:layout_gravity="center"
                        android:drawablePadding="12dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:padding="25dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_login_bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_security_ques">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add a Security Question"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:fontFamily="@font/lato"/>

                    <TextView
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security Question"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:fontFamily="@font/lato"/>
                    <EditText
                        android:backgroundTint="#32ffffff"
                        android:fontFamily="@font/lato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:paddingBottom="15dp"
                        android:textColorHint="#32ffffff"
                        android:hint="Select a question from the list"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Answer"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:fontFamily="@font/lato"/>
                    <EditText
                        android:backgroundTint="#32ffffff"
                        android:fontFamily="@font/lato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:paddingBottom="15dp"
                        android:textColorHint="#32ffffff"
                        android:hint="Enter Your Answer (min of 3 letters)"/>

                    <View
                        android:minHeight="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_marginBottom="5dp"
                        android:id="@+id/btn_sq_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:gravity="center"
                        android:fontFamily="@font/lato"
                        android:textColor="#ffffff"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_right_white_arrow"
                        android:layout_gravity="center"
                        android:drawablePadding="12dp"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</FrameLayout>