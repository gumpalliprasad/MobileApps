<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_doodle_three"
    tools:context=".QBox.AskADoubt">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="Ask A Doubt"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Spinner
                android:id="@+id/sp_course"
                style="@style/test_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="16dp"
                android:overlapAnchor="false"
                android:padding="8dp"
                android:spinnerMode="dropdown"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/sp_class"
                style="@style/test_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="16dp"
                android:overlapAnchor="false"
                android:padding="8dp"
                android:spinnerMode="dropdown"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/sp_subjects"
                style="@style/test_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="16dp"
                android:overlapAnchor="false"
                android:padding="8dp"
                android:spinnerMode="dropdown"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/sp_chapters"
                style="@style/test_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="16dp"
                android:overlapAnchor="false"
                android:padding="8dp"
                android:spinnerMode="dropdown"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/sp_topics"
                style="@style/test_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="16dp"
                android:overlapAnchor="false"
                android:padding="8dp"
                android:spinnerMode="dropdown"
                android:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/et_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/lato"
                        android:gravity="start|top"
                        android:hint="Write Something"
                        android:maxLength="200"
                        android:maxLines="7"
                        android:minLines="7"
                        android:textColor="#494949"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_message_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:alpha="0.2"
                        android:fontFamily="@font/lato"
                        android:paddingEnd="16dp"
                        android:text="0/200"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_image" />


            <LinearLayout
                android:id="@+id/ll_uploadImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_corners_doubts_upload"
                android:gravity="center"
                android:padding="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="7dp"
                    android:src="@drawable/ic_upload_doubt" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="7dp"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="Upload Image"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/tv_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_grad_proceed"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:padding="16dp"
        android:text="Proceed"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>